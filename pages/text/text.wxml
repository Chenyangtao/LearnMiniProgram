<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>helloworld\n</text>
<text>欢迎\n</text>

<!-- 2.selectable:true -->
<!-- 默认情况下text中的文本长按不能被选中 -->
<text selectable="{{true}}">Hello cyt\n</text>
<text selectable>Hello cyt\n</text>    

<!-- 3.space:决定文本空格的大小 -->
<!-- ensp:半个中文字符的大小  emsp:一个字的大小 -->
<text >Hello cyt\n</text>
<text space="nbsp">Hello cyt\n</text>
<text space="ensp" >Hello cyt\n</text>
<text space="emsp">Hello cyt\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>
